        if #ShowOkCancelButtons then
            #C_BtnCancel!.setLocation(w-160,h-25)
            #C_BtnOk!.setLocation(w-80,h-25)
            #setSize(w,h-40)
        else
            #setSize(w,h)
        fi
        
    methodend



