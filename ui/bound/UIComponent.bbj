            wnd! = #getParentWnd()
            #MenuBar! = cast(BBjMenuBar,wnd!.addMenuBar())
            myMenu!=#MenuBar!.addMenu(-1,"&File")
            item_exit! = myMenu!.addMenuItem(-2,"&Close")
            item_exit!.setCallback(BBjAPI.ON_MENU_ITEM_SELECT,#this!,"onMenuExit")
        fi
        
